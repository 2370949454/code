<configuration>

    <appender name="std_pattern" class="com.lsm1998.log4j.appender.ConsoleAppender">
        <filter class="com.lsm1998.log4j.filter.LevelFilter">
            <param name="level" value="debug"/>
        </filter>
        <layout class="com.lsm1998.log4j.layout.PatternLayout">
            <param name="pattern" value="%d %t %p %c %m%n"/>
        </layout>
    </appender>

    <appender name="std_plain" class="com.lsm1998.log4j.appender.ConsoleAppender">
        <filter class="com.lsm1998.log4j.filter.LevelFilter">
            <param name="level" value="debug"/>
        </filter>
        <layout class="com.lsm1998.log4j.layout.PlainLayout"/>
    </appender>

    <logger name="com.lsm1998.log4j">
        <appender-ref ref="std_plain"/>
        <appender-ref ref="std_pattern"/>
    </logger>

    <root level="trace">
        <appender-ref ref="std_pattern"/>
    </root>
</configuration>
